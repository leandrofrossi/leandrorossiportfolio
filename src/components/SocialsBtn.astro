---
interface Props {
	title: string;
	href: string;
	icon: any;
}

const { href, title, icon } = Astro.props;

import IconComponent from './IconComponent.jsx';
---
<button class="bg-blue-500 hover:bg-blue-400 hover:shadow-white dark:bg-transparent dark:hover:bg-blue-500 hover:shadow-md dark:hover:shadow-blue-200 rounded-xl border p-2 backdrop-blur-sm text-gray-100">
	<a href={href} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1">
		<IconComponent icon={icon} className="size-4 sm:size-6"/>
		<h2 class="text-sm xs:text-md sm:text-lg">
			{title}			
		</h2>		
	</a>
</button>