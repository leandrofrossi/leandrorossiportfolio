---
import Layout from '../layouts/Layout.astro';
import SocialsBtn from '../components/SocialsBtn.astro';
import AboutMe from '../components/AboutMe.astro';
import Header from '../components/Header.astro';
import { FaGithub, FaLinkedin } from "react-icons/fa";
import { TbMailShare } from "react-icons/tb";
---

<Layout title="Portfolio">
	<Header/>
	<main class="flex flex-col gap-6 text-white w-3/4 m-auto p-4">
		<section id="inicio" class="flex flex-col md:flex-row justify-evenly items-center p-4 rounded-3xl h-screen">			
			<div class="flex flex-col text-center">		
				<h1 class="text-7xl font-bold">Leandro Rossi</h1>
				<h2 class="text-blue-500 text-5xl font-semibold">Frontend Developer</h2>
				<div class="py-6">
					<SocialsBtn
					href="https://www.linkedin.com/in/rossileandro/"
					title="LinkedIn"
					icon={FaLinkedin}
					/>				
					<SocialsBtn
						href="https://github.com/leandrofrossi"
						title="GitHub"
						icon={FaGithub}
					/>
					<SocialsBtn
						href="mailto:rossileandrof@gmail.com"
						title="Email"
						icon={TbMailShare}
					/>
				</div>
			</div>						
		</section>
		<section id="proyectos" class="h-96">
			<h2 class="font-semibold text-3xl mb-4">Proyectos</h2>
			<p>En proceso...</p>
		</section>
		<section id="skills" class="h-96">
			<h2 class="font-semibold text-3xl mb-4">Skills</h2>
			<p>En proceso...</p>
		</section>	
		<section id="sobre-mi">
			<h2 class="font-semibold text-3xl mb-4">Sobre m√≠</h2>
			<AboutMe/>
		</section>
	</main>
</Layout>

