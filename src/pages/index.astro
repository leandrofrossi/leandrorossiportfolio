---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Portfolio">
	<main>
		<div class="title">		
			<h1>Leandro Rossi</h1>
			<h2>Frontend Developer</h2>
		</div>
			<Card
				href=""
				title="Próximamente"
				body="Sitio en construcción..."
			/>	
			<Card
				href="https://www.linkedin.com/in/rossileandro/"
				title="LinkedIn"
				body=""
			/>	
			<Card
				href="https://github.com/leandrofrossi"
				title="GitHub"
				body=""
			/>			
			
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;		
	}
	.title{
		display: flex;
		flex-direction: column;		
		background-color: #23262d;	
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		border-radius: 7px;		
		align-items: center;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		text-align: center;			
	}	
	h2{
		font-size: 2rem;
	}
</style>
